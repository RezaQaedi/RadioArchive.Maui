    <!--  Lables  -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="PTSansCaptionRegular" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource White}}" />
    </Style>
    <Style Class="LargeTitle" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="PTSansCaptionRegular" />
    </Style>
    <Style Class="SectionTitle" TargetType="Label">
        <Setter Property="FontSize" Value="27" />
        <Setter Property="TextColor" Value="{StaticResource Accent_Blue100}" />
        <Setter Property="FontFamily" Value="PTSansCaptionRegular" />
    </Style>
    <Style Class="Title1" TargetType="Label">
        <Setter Property="FontSize" Value="26" />
        <Setter Property="FontFamily" Value="PTSansCaptionRegular" />
    </Style>
    <Style Class="Headline" TargetType="Label">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontFamily" Value="PTSansCaptionRegular" />
    </Style>
    <Style Class="Subhead" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style Class="SubContent" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource TabOff}}" />
    </Style>
    <Style Class="Footnote" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource TextLight}}" />
    </Style>
    <Style Class="Footnotesub" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ForegroundSubtitleDark}, Dark={StaticResource ForegroundSubtitle}}" />
    </Style>
    <Style Class="Small" TargetType="Label">
        <Setter Property="FontSize" Value="10" />
    </Style>

    <!--  Text Color Styles  -->
    <Style Class="Secondary" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Secondary}" />
    </Style>
    <Style Class="Primary" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource ForegroundSubtitle}, Light={StaticResource ForegroundSubtitleDark}}" />
    </Style>
    <Style Class="Error" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Error}" />
    </Style>
    <Style Class="Warning" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Warning}" />
    </Style>
    <Style Class="Disabled" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Neutral}" />
    </Style>

    <Style TargetType="ListView">
        <Setter Property="SeparatorColor" Value="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}" />
        <Setter Property="RefreshControlColor" Value="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                            <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource DarkGray}, Dark={StaticResource LightGray}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightGray}, Dark={StaticResource DarkGray}}" />
