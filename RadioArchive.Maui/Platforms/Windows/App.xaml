<maui:MauiWinUIApplication
    x:Class="RadioArchive.Maui.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RadioArchive.Maui.WinUI"
    xmlns:maui="using:Microsoft.Maui">

    <maui:MauiWinUIApplication.Resources>
        <DataTemplate x:Key="MauiAppTitleBarContainerTemplate">
            <Grid HorizontalAlignment="Stretch">
                <ContentControl
                    x:Name="AppTitleBarContentControl"
                    Grid.Column="4"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    IsTabStop="False" />
            </Grid>
        </DataTemplate>

        <SolidColorBrush x:Key="WindowCaptionBackground">#24405c</SolidColorBrush>
        <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">#57728F</SolidColorBrush>
        <!--<SolidColorBrush x:Key="WindowCaptionForeground">Red</SolidColorBrush>
        <SolidColorBrush x:Key="WindowCaptionForegroundDisabled">Pink</SolidColorBrush>-->


    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>
